<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#33000000"/> <!-- very transparent black -->
            <size android:width="64dp" android:height="64dp"/>
        </shape>
    </item>

    <!-- Bubble -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#8800AAFF"/>
            <stroke android:width="1dp" android:color="#33000000"/>
            <size android:width="60dp" android:height="60dp"/>
        </shape>
    </item>

</layer-list>
